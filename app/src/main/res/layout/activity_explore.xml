<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ExploreActivity"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/grid_layout_event_search"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="22dp"
            android:layout_marginTop="2dp"
            android:columnCount="1"
            android:rowCount="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/search_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="@string/prompt_search"
                android:selectAllOnFocus="true"
                />

            <EditText
                android:id="@+id/search_bar2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:hint="@string/prompt_search"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                />

        </GridLayout>

        <GridLayout
            android:id="@+id/grid_layout_event_list"
            app:layout_constraintStart_toStartOf="@+id/grid_layout_event_search"
            app:layout_constraintTop_toBottomOf="@+id/grid_layout_event_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:rowCount="20"
            android:columnCount="1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>